# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=dripemails.org,www.dripemails.org,api.dripemails.org,dripemail.org,www.dripemail.org

# Database Settings (PostgreSQL)
DB_NAME=dripemails
DB_USER=dripemails
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Email Settings - Development (Built-in SMTP, No Authentication)
# For Windows development with DEBUG=True, leave EMAIL_HOST_USER and EMAIL_HOST_PASSWORD empty
# Default port is 1025 to avoid conflicts with Postfix running on port 25
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@dripemails.org

# Email Settings - Development (With Authentication)
# Uncomment and configure if you want to use SMTP authentication in development
# EMAIL_HOST=localhost
# EMAIL_PORT=1025
# EMAIL_HOST_USER=founders
# EMAIL_HOST_PASSWORD=your_password
# EMAIL_USE_TLS=False
# DEFAULT_FROM_EMAIL=noreply@dripemails.org

# Email Settings - Production Postfix Server
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=localhost
# EMAIL_PORT=587
# EMAIL_HOST_USER=noreply@dripemails.org
# EMAIL_HOST_PASSWORD=your_secure_password
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False
# EMAIL_TIMEOUT=30
# DEFAULT_FROM_EMAIL=noreply@dripemails.org

# Email Settings - External SMTP (Alternative)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@dripemails.org

# Celery Settings (Optional - Redis not required for Windows development)
# On Windows with DEBUG=True, Celery is automatically disabled (synchronous email sending)
# Leave empty for auto-detection, or set to True/False to override
CELERY_ENABLED=
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db

# Redis Settings (Optional - only needed if CELERY_ENABLED=True)
# Not required for Windows development with DEBUG=True
REDIS_URL=redis://127.0.0.1:6379/1

# Security Settings
# Production: set DJANGO_DEBUG=false or omit (live.py defaults to False)
# Temporary debugging: DJANGO_DEBUG=true (never leave True on production)
DJANGO_DEBUG=false
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Gmail/Email Provider OAuth Settings (for Gmail, Outlook, IMAP integration)
# Get credentials from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a project
# 2. Enable Gmail API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add authorized redirect URI: https://yourdomain.com/api/gmail/callback/
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=https://dripemails.org/api/gmail/callback/

# Ollama AI Settings (for AI Email Generation)
# For local development, use: http://localhost:11434
# For remote server, use: http://YOUR_SERVER_IP:11434 or http://0.0.0.0:11434
# Model options (memory requirements):
#   - llama3.2:1b (smallest, ~1.3GB RAM, fastest, good for limited memory) - RECOMMENDED for low memory
#   - llama3.2:3b (balanced, ~2.0GB RAM, better quality)
#   - llama3.2:1b (largest, ~4.8GB RAM, best quality, requires more memory)
# See docs/ai/ollama_remote_setup.md for detailed setup instructions
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b
OLLAMA_TIMEOUT=300

# Hugging Face AI Settings (Legacy - Optional)
# Get your API key from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
# Optional: Override default model (default is HuggingFaceH4/zephyr-7b-beta)
# Default model works immediately, no approval required
# Alternative models (if you have access):
#   - meta-llama/Llama-3.2-1B-Instruct (requires approval, may have availability issues)
#   - mistralai/Mistral-7B-Instruct-v0.1 (may require approval)
HUGGINGFACE_MODEL=HuggingFaceH4/zephyr-7b-beta

# Data Retention Policy (in days)
# Number of days to retain email messages and send activity
DATA_RETENTION_DAYS=30

# Show CAN-SPAM Address Modal for New Accounts
# If True, show modal when address/name missing (CAN-SPAM requirement)
# If False, users must edit on settings page instead of popup modal
SHOW_ADDRESS_NAME_MODAL_NEW_ACCOUNTS=True

# Optional: External Services
# SENTRY_DSN=your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=your-ga-id-here 

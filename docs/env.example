# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=dripemails.org,www.dripemails.org,api.dripemails.org

# Database Settings (PostgreSQL)
DB_NAME=dripemails
DB_USER=dripemails
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Email Settings - Development (Built-in SMTP, No Authentication)
# For Windows development with DEBUG=True, leave EMAIL_HOST_USER and EMAIL_HOST_PASSWORD empty
# Default port is 1025 to avoid conflicts with Postfix running on port 25
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@dripemails.org

# Email Settings - Development (With Authentication)
# Uncomment and configure if you want to use SMTP authentication in development
# EMAIL_HOST=localhost
# EMAIL_PORT=1025
# EMAIL_HOST_USER=founders
# EMAIL_HOST_PASSWORD=your_password
# EMAIL_USE_TLS=False
# DEFAULT_FROM_EMAIL=noreply@dripemails.org

# Email Settings - Production Postfix Server
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=localhost
# EMAIL_PORT=587
# EMAIL_HOST_USER=noreply@dripemails.org
# EMAIL_HOST_PASSWORD=your_secure_password
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False
# EMAIL_TIMEOUT=30
# DEFAULT_FROM_EMAIL=noreply@dripemails.org

# Email Settings - External SMTP (Alternative)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@dripemails.org

# Celery Settings (Optional - Redis not required for Windows development)
# On Windows with DEBUG=True, Celery is automatically disabled (synchronous email sending)
# Leave empty for auto-detection, or set to True/False to override
CELERY_ENABLED=
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db

# Redis Settings (Optional - only needed if CELERY_ENABLED=True)
# Not required for Windows development with DEBUG=True
REDIS_URL=redis://127.0.0.1:6379/1

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Hugging Face AI Settings
# Get your API key from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
# Optional: Override default model (default is mistralai/Mistral-7B-Instruct-v0.2)
HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Optional: External Services
# SENTRY_DSN=your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=your-ga-id-here 